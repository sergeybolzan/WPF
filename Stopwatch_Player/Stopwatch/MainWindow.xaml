<Window x:Class="Stopwatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="СЕКУНДОМЕР" Height="350" Width="380" MinHeight="350" MinWidth="380" WindowStartupLocation="CenterScreen">
    <DockPanel LastChildFill="True">
        <TextBox DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="30" FontSize="30" FontWeight="Bold">00:00:00:000</TextBox>
        <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Margin="10" Width="100" FontSize="20" FontWeight="Bold">ЗАПУСК</Button>
            <Button Margin="10" Width="100" FontSize="20" FontWeight="Bold">СБРОС</Button>
            <Button Margin="10" Width="100" FontSize="20" FontWeight="Bold">КРУГ</Button>
        </StackPanel>
        <TextBox Margin="15">
            <TextBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFAAA2A2" Offset="0.042"/>
                    <GradientStop Color="#FFF5DEDE" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.Background>
        </TextBox>
    </DockPanel>
</Window>
